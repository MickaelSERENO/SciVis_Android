<?xml version="1.0" encoding="utf-8"?>

<android.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    tools:showIn="@layout/main_activity">

    <!-- Add/delete datasets-->
    <Button
        android:id="@+id/deleteDataBtn"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deleteDataBtn"/>
    <Button
        android:id="@+id/addNewDataBtn"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/addDataBtn"/>

    <!-- The range color manipulation -->
    <com.sereno.view.RangeColorView
        android:id="@+id/rangeColorView"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amplitudeRange"/>

    <!-- The color mode setting -->
    <Spinner
        android:id="@+id/colorModeSpinner"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:entries="@array/colorMode"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_column="0"
        android:layout_row="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vorticity"/>
</android.widget.GridLayout>