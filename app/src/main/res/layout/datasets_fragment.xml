<?xml version="1.0" encoding="utf-8"?>

<!-- Main body Layout of screen (drawer will slide over this) -->
<android.support.v7.widget.GridLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Previews -->
    <ScrollView
        app:layout_row="0"
        app:layout_rowWeight="3"
        app:layout_column="0"
        app:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/treeColor">
        <com.sereno.view.TreeView
            android:id="@+id/previewLayout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:topOffsetPerChild="10px"
            app:leftOffsetPerLevel="25px"
            app:strokeWidth="3px"
            app:extendHeight="64px"
            app:extendWidth="64px"
            app:inExtendSrc="@drawable/in_expend"
            app:notExtendSrc="@drawable/not_expend"
            android:textAlignment="center"
            />
    </ScrollView>

    <!-- Information -->
    <LinearLayout
        android:id="@+id/informationLayout"
        android:layout_height="100px"
        android:layout_width="100px"
        android:orientation="vertical"
        app:layout_row="1"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        app:layout_column="0">
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:color/black"/>
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/headsetColor"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/headsetColor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/no_snapshot"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Records -->

    <!-- Current data preview -->
    <com.sereno.gl.VFVSurfaceView
        android:id="@+id/mainView"
        app:layout_row="0"
        app:layout_rowSpan="1"
        app:layout_rowWeight="4"
        app:layout_column="1"
        app:layout_columnWeight="3"
        android:layout_width="300px"
        android:layout_height="300px"
        />

    <LinearLayout
        android:id="@+id/selectionMenu"
        android:orientation="vertical"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/tabletScaleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tablet scale" />

        <SeekBar
            android:id="@+id/tabletScaleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="1" />

        <ToggleButton
            android:id="@+id/selectionToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Selection"
            android:textOff="Start selection"
            android:textOn="End selection" />



    </LinearLayout>
</android.support.v7.widget.GridLayout>