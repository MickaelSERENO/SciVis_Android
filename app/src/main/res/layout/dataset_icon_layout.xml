<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:adjustViewBounds="true"
        android:maxWidth="256dp"
        android:maxHeight="256dp"
        android:id="@+id/snapshotImageView"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/datasetPublicIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="32dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/public_icon"/>

        <ImageView
            android:id="@+id/datasetPrivateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="32dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/private_icon"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/datasetSVIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="32dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/subj_view_icon"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
